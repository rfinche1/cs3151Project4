<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rasfincher.cs3151.project4.controller.TreeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="openMenuItem" mnemonicParsing="false" onAction="#chooseInputFile" text="Open…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="preferencesMenuItem" mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="quitMenuItem" mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="480.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <TextArea id="outputTextBox" fx:id="outputTextBox" editable="false" layoutX="14.0" layoutY="113.0" prefHeight="240.0" prefWidth="612.0" text="No data to display." />
            <Label layoutX="49.0" layoutY="14.0" text="Tree Height:" textAlignment="RIGHT" />
            <Label layoutX="65.0" layoutY="48.0" text="Tree Size:" textAlignment="RIGHT" />
            <Label layoutX="16.0" layoutY="82.0" text="Number of Leaves:" textAlignment="RIGHT" />
            <TextField fx:id="treeHeightTextArea" editable="false" layoutX="123.0" layoutY="10.0" prefHeight="25.0" prefWidth="76.0" />
            <TextField fx:id="treeSizeTextArea" editable="false" layoutX="123.0" layoutY="44.0" prefHeight="25.0" prefWidth="76.0" />
            <TextField fx:id="leafCountTextArea" editable="false" layoutX="123.0" layoutY="78.0" prefHeight="25.0" prefWidth="76.0" />
         </children>
    </AnchorPane>
  </children>
</VBox>
